# Version and Metadata
ENV_FILE_VERSION=1.0.0
LAST_UPDATED=2024-01-01

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Authentication
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d
TOKEN_ISSUER=voice-agent-api
PASSWORD_HASH_ROUNDS=12

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=voice_agent_db
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL=false
REDIS_DB=0
REDIS_KEY_PREFIX=voice_agent
REDIS_RETRY_ATTEMPTS=5

# Speech Services
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
SPEECH_SAMPLE_RATE=16000
SPEECH_ENCODING=OPUS
SPEECH_LANGUAGE_CODE=en-US
VAD_THRESHOLD=-26
NOISE_FLOOR=-45
LATENCY_BUDGET=500
FRAME_SIZE_MS=20

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=voice-agent-storage
S3_URL_EXPIRY=3600
CLOUDFRONT_DOMAIN=your-cloudfront-domain
CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
CLOUDFRONT_PRIVATE_KEY=path/to/private-key.pem

# WebSocket Configuration
WS_PATH=/ws
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
WS_MAX_PAYLOAD_SIZE=16384
WS_MAX_CONNECTIONS=1000
WS_BACKPRESSURE_SIZE=1024

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
ENABLE_REQUEST_LOGGING=true
LOG_FORMAT=json
ERROR_LOG_FILE=logs/error.log
ACCESS_LOG_FILE=logs/access.log
ENABLE_PERFORMANCE_MONITORING=true
METRICS_PORT=9090

# Security
ENABLE_RATE_LIMITING=true
ENABLE_HELMET=true
ENABLE_XSS_PROTECTION=true
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:5173
TRUST_PROXY=false
SESSION_SECRET=your-session-secret-min-32-chars