{
  "name": "ai-voice-agent-backend",
  "version": "1.0.0",
  "description": "Backend services for AI Voice Agent providing real-time voice interaction capabilities with enterprise-grade security and monitoring",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "docker:build": "docker build -t ai-voice-agent-backend .",
    "docker:run": "docker run -p 3000:3000 ai-voice-agent-backend",
    "security:audit": "pnpm audit",
    "validate:env": "ts-node scripts/validate-env.ts"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.400.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/s3-request-presigner": "^3.400.0",
    "@discordjs/opus": "^0.9.0",
    "@google-cloud/speech": "^5.5.0",
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "^5.0.0",
    "argon2": "^0.31.0",
    "bcrypt": "^5.1.0",
    "buffer": "^6.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.0.0",
    "joi": "^17.9.0",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "opossum": "^6.0.0",
    "pino": "^8.0.0",
    "prom-client": "^14.0.0",
    "rate-limiter-flexible": "^3.0.0",
    "redis": "^4.6.7",
    "rxjs": "^7.8.1",
    "validator": "^13.9.0",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.13.0",
    "ws-rate-limit": "^2.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.4.5",
    "@types/webassembly-js-api": "^0.0.18",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "fast-check": "^3.0.0",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "redis-mock": "^0.56.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "testcontainers": "^9.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": ".ts,.js",
    "exec": "ts-node ./src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}